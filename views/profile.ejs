<%- include('header.ejs') %>   

<!-- PORTO -->
<div class="makeCenter">

    <div class="container-porto">
        <div class="profile">

            <div class="picture">
                <div class="background"></div>

                <% if (porto && porto.urlImage) { %>
                    <div class="forImage" style="background-image: url('<%= porto.urlImage %>')"></div>
                <% } else { %>
                    <div class="forImage" style="background-image: url('../Images/defaultImage.jpg')"></div>
                <% } %>

                <div class="bintang">
                    <img id="bintang1" src="Images/kayaNada.svg">
                    <img id="bintang2" src="Images/backgroundIcon.svg">
                </div>
            </div>
            
            
            <div class="des-profile">
                <h1><%= porto.name %></h1>
                <div class="boxSkill">
                    <p id="portoText">Portofolio</p>
                    <p><%= porto.specialist %></p>
                </div>
                <div class="descSingkat">
                    <p><%= porto.about %></p>
                </div>
            </div>

            
        </div>

        <div class="item2-container">
            <div class="item2 child1">
                <div class="myskill">
                    <h2>Personal Skill</h2>
                    <div class="logoSkill">

                        <% (filterSkill).forEach(element => { %>
                            <img src=<%= element.url %>>
                        <% }) %>

                    </div>
                </div>
                <div class="achievement"></div>
                    <h2>Achievement</h2>

                    <% (porto.achievement).forEach(element => { %>
                        <div class="certi">
                            <h3><%= element.type %> </h3>
                            <p><%= element.desc %></p>
                        </div>
                    <% }) %>
                    

            </div>
            <div class="item2 child2">
                <div class="experience">
                    <h2>Experience</h2>

                    <% (porto.experience).forEach(element => { %>
                        <div class="exp">
                            <h3><%= element.position %></h2>
                            <p><%= element.instance %></p>
                            <p class="tahunExp"><%= element.year %></p>
                        </div>
                    <% }) %>

                    
                    <a href= "<%= porto.linkCV %>" >
                        <h3 class="downloadCV">Download Full CV</h3>
                    </a>
                    
                    
                </div>
            </div>
        </div>
    </div>


    <!-- Slideshow container -->
     <div class="titlePorto">
        <h2>PORTOFOLIO</h2>
     </div>
    <div class="slideshow-container">

        <!-- Full-width images with number and caption text -->

        <% (porto.urlImagePorto).forEach(e => { %>
            <div class="mySlides fade">
                <img src=<%= e.url %> style="width:100%">
            </div>
        <% }) %>
    
        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>
    
    <!-- The dots/circles -->
    <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
    </div>

    <!-- End Slide -->

 </div>

<!-- EndPORTO -->

<%- include('footer.ejs') %>